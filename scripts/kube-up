#!/bin/bash

# Spinner function to show task progress
spinner() {
    local message="$1"
    local delay=0.1
    local spinstr='|/-\'

    echo -ne "$message"
    while [ -e "/tmp/spinner.lock" ]; do
        for ((i = 0; i < ${#spinstr}; i++)); do
            printf "\r%s [%c] " "$message" "${spinstr:i:1}"
            sleep $delay
        done
    done
    printf "\r%s âœ… Done!     \n" "$message"
}

# Function to wait until nodes are detected (regardless of Ready state)
wait_for_node_presence() {
    local expected_nodes=3
    local timeout=300
    local elapsed=0

    touch /tmp/spinner.lock
    spinner "ðŸ”„ Waiting for $expected_nodes cluster nodes to appear..." &
    SPINNER_PID=$!

    while true; do
        node_count=$(kubectl get nodes --no-headers 2>/dev/null | wc -l)

        if [ "$node_count" -eq "$expected_nodes" ]; then
            rm -f /tmp/spinner.lock
            wait $SPINNER_PID 2>/dev/null
            echo -e "âœ… Detected $expected_nodes cluster nodes (Ready/NotReady)."
            break
        fi

        sleep 10
        ((elapsed+=10))

        if [ "$elapsed" -ge "$timeout" ]; then
            rm -f /tmp/spinner.lock
            wait $SPINNER_PID 2>/dev/null
            echo "âŒ Timeout: Expected $expected_nodes nodes did not appear."
            exit 1
        fi
    done
}

# Function to install Cilium CNI
install_cilium() {
    echo "ðŸš€ Installing Cilium CNI..."
    helm repo add cilium https://helm.cilium.io/ > /dev/null 2>&1
    helm repo update > /dev/null 2>&1

    helm install \
        cilium \
        cilium/cilium \
        --version 1.15.6 \
        --namespace kube-system \
        --set ipam.mode=kubernetes \
        --set kubeProxyReplacement=false \
        --set securityContext.capabilities.ciliumAgent="{CHOWN,KILL,NET_ADMIN,NET_RAW,IPC_LOCK,SYS_ADMIN,SYS_RESOURCE,DAC_OVERRIDE,FOWNER,SETGID,SETUID}" \
        --set securityContext.capabilities.cleanCiliumState="{NET_ADMIN,SYS_ADMIN,SYS_RESOURCE}" \
        --set cgroup.autoMount.enabled=false \
        --set cgroup.hostRoot=/sys/fs/cgroup

    if [ $? -eq 0 ]; then
        echo "âœ… Cilium installation completed!"
    else
        echo "âŒ Cilium installation failed!"
        exit 1
    fi
}

# Function to wait until all nodes are Ready
wait_for_ready_nodes() {
    local expected_nodes=3
    local timeout=600
    local elapsed=0

    touch /tmp/spinner.lock
    spinner "â³ Waiting for all $expected_nodes nodes to become Ready..." &
    SPINNER_PID=$!

    while true; do
        ready_count=$(kubectl get nodes --no-headers 2>/dev/null | awk '$2 == "Ready"' | wc -l)

        if [ "$ready_count" -eq "$expected_nodes" ]; then
            rm -f /tmp/spinner.lock
            wait $SPINNER_PID 2>/dev/null
            echo -e "âœ… All $expected_nodes nodes are now Ready!"
            kubectl get nodes
            break
        fi

        sleep 10
        ((elapsed+=10))

        if [ "$elapsed" -ge "$timeout" ]; then
            rm -f /tmp/spinner.lock
            wait $SPINNER_PID 2>/dev/null
            echo "âŒ Timeout: Nodes did not reach Ready state within $((timeout/60)) minutes."
            exit 1
        fi
    done
}

# Build cluster
touch /tmp/spinner.lock
spinner "ðŸš€ Building cluster..." &
SPINNER_PID=$!
cd /Users/julio/Documents/Projects/homelab-1/terraform/proxmox || { echo "âŒ Failed to change directory"; exit 1; }
terraform apply --auto-approve > /dev/null 2>&1
rm -f /tmp/spinner.lock
wait $SPINNER_PID 2>/dev/null

# Set up cluster nodes
touch /tmp/spinner.lock
spinner "âš™ï¸ Setting up cluster nodes..." &
SPINNER_PID=$!
cd /Users/julio/Documents/Projects/homelab-1/talosctl/ || { echo "âŒ Failed to change directory"; exit 1; }
./setup.sh > /dev/null 2>&1
rm -f /tmp/spinner.lock
wait $SPINNER_PID 2>/dev/null

# Step 1: Wait for nodes to appear (even NotReady)
wait_for_node_presence

# Step 2: Install Cilium once nodes are detected
install_cilium

# Step 3: Wait for all nodes to become Ready
wait_for_ready_nodes

echo "ðŸŽ‰ Cluster setup and Cilium installation completed successfully!"

